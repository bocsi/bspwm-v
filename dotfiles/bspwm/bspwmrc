! /bin/bash

#autostart
sxhkd &
polybar example &
picom --experimental-backend &

#Вworkspaces
bspc monitor -d             


#borders & gaps
bspc config border_width         1
bspc config window_gap          10

bspc config normal_border_color "#23252e"
bspc config active_border_color "#23252e"
bspc config focused_border_color "#f9f8fe"


bspc config presel_feedback_color "fd2e59"

# split ration (percentage)
bspc config split_ratio          0.5

#focua window on mouse hoover
bspc config focus_follows_pointer true
bspc config pointer_modifier	super

# monocle layout when a single window is opened
bspc config single_monocle	     false


#windows layout
#bspc config automatic_scheme	spiral


# window rules
bspc rule -a firefox state=floating follow=off rectangle=1350x900+50+90 desktop='^1'
bspc rule -a mpv state=floating rectangle=800x450+560+315 follow=off
bspc rule -a rofi rectangle=900x22+610+90
